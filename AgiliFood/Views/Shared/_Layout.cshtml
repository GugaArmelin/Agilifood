<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ÁgiliFood</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ÁgiliFood", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if(Convert.ToBoolean(Session["LoggedIn"]) == true) {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>                    
                        if(Session["UsuarioTipo"].ToString() == "Administrador")
                        {
                            <li>@Html.ActionLink("Usuarios", "Index", "Usuario")</li>
                        }
                        if(Session["UsuarioTipo"].ToString() == "Funcionario" || Session["UsuarioTipo"].ToString() == "Financeiro")
                        {
                            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
                        }
                        if(Session["UsuarioTipo"].ToString() == "Fornecedor") {
                            <li>@Html.ActionLink("Cardápio", "Index", "Cardapio")</li>
                            <li>@Html.ActionLink("Produtos", "Index", "Produto")</li>
                        }
                        if(Session["UsuarioTipo"].ToString() == "Financeiro")
                        {
                            <li>@Html.ActionLink("Relatórios", "Index", "Relatorio")</li>
                        }
                            <li>@Html.ActionLink("Logoff", "Logoff", "Usuario")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ÁgiliFood</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
